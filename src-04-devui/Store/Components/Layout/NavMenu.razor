@using Store.Components.Cart

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">eShopLite - InMemory</a>
        <div class="ms-auto">
            <CartIcon OnToggleCart="ToggleCart" />
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="products">
                <span class="bi bi-list-nested" aria-hidden="true"></span> Products
            </NavLink>
        </div>

        <!-- Smart Search Option -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="search">
                <span class="bi bi-search" aria-hidden="true"></span> Search
            </NavLink>
        </div>

        <!-- Cart Option -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cart">
                <span class="bi bi-cart" aria-hidden="true"></span> Cart
            </NavLink>
        </div>

        <hr class="nav-divider" />

        <!-- Management Section -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="customers">
                <span class="bi bi-people" aria-hidden="true"></span> Customers
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="locations">
                <span class="bi bi-geo-alt" aria-hidden="true"></span> Locations
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="discounts">
                <span class="bi bi-percent" aria-hidden="true"></span> Discounts
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="devui">
                <span class="bi bi-people" aria-hidden="true"></span> DevUI
            </NavLink>
        </div>
    </nav>
</div>

@code {
    [Parameter] public EventCallback OnToggleCart { get; set; }

    private async Task ToggleCart()
    {
        await OnToggleCart.InvokeAsync();
    }
}
