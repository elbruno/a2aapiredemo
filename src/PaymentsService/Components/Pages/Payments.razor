@page "/payments"
@using PaymentsService.Services
@using PaymentsService.DTOs
@inject IPaymentRepository PaymentRepository
@inject ILogger<Payments> Logger
@attribute [StreamRendering(true)]

<PageTitle>Payments</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-credit-card me-2"></i>Payments</h1>
    <button class="btn btn-outline-primary" @onclick="RefreshPayments">
        <i class="bi bi-arrow-clockwise me-1"></i>Refresh
    </button>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Loading payments...</p>
    </div>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @errorMessage
    </div>
}
else
{
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" placeholder="Filter by User ID" @bind="userIdFilter" @bind:event="oninput">
            </div>
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="statusFilter">
                <option value="">All Status</option>
                <option value="Success">Success</option>
                <option value="Failed">Failed</option>
                <option value="Pending">Pending</option>
            </select>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary w-100" @onclick="ApplyFilters">
                <i class="bi bi-funnel me-1"></i>Apply Filters
            </button>
        </div>
    </div>

    @if (paymentResponse != null && paymentResponse.Items.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Payment Records (@paymentResponse.TotalCount total)</span>
                <small class="text-muted">Page @currentPage of @totalPages</small>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Payment ID</th>
                                <th>User ID</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Payment Method</th>
                                <th>Items</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in paymentResponse.Items)
                            {
                                <tr>
                                    <td>
                                        <small class="font-monospace">@payment.PaymentId[..8]...</small>
                                    </td>
                                    <td>@payment.UserId</td>
                                    <td>
                                        <strong>@payment.Amount.ToString("C") @payment.Currency</strong>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(payment.Status)">
                                            @payment.Status
                                        </span>
                                    </td>
                                    <td>@payment.PaymentMethod</td>
                                    <td>
                                        <small>@payment.Items.Count item(s)</small>
                                        @if (payment.Items.Any())
                                        {
                                            <br />
                                            <small class="text-muted">
                                                @string.Join(", ", payment.Items.Take(2).Select(i => $"{i.Quantity}x {i.ProductId}"))
                                                @if (payment.Items.Count > 2)
                                                {
                                                    <text>...</text>
                                                }
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <small>@payment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            @if (totalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Payment pagination">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </button>
                            </li>
                            
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(i)">@i</button>
                                </li>
                            }
                            
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                                    Next <i class="bi bi-chevron-right"></i>
                                </button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-credit-card-2-front display-1 text-muted"></i>
            </div>
            <h3 class="text-muted">No payments found</h3>
            <p class="text-muted">No payment records match your current filters.</p>
            @if (!string.IsNullOrEmpty(statusFilter) || !string.IsNullOrEmpty(userIdFilter))
            {
                <button class="btn btn-outline-primary" @onclick="ClearFilters">
                    <i class="bi bi-x-circle me-1"></i>Clear Filters
                </button>
            }
        </div>
    }
}

@code {
    private PaymentListResponse? paymentResponse;
    private bool isLoading = true;
    private string? errorMessage;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages => paymentResponse?.TotalCount > 0 ? (int)Math.Ceiling((double)paymentResponse.TotalCount / pageSize) : 0;
    
    private string userIdFilter = string.Empty;
    private string statusFilter = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPayments();
    }

    private async Task LoadPayments()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            
            var userId = string.IsNullOrWhiteSpace(userIdFilter) ? null : userIdFilter.Trim();
            var status = string.IsNullOrWhiteSpace(statusFilter) ? null : statusFilter;
            
            paymentResponse = await PaymentRepository.GetPaymentsAsync(currentPage, pageSize, status, userId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading payments");
            errorMessage = "Failed to load payments. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshPayments()
    {
        currentPage = 1;
        await LoadPayments();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadPayments();
    }

    private async Task ClearFilters()
    {
        userIdFilter = string.Empty;
        statusFilter = string.Empty;
        currentPage = 1;
        await LoadPayments();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadPayments();
        }
    }

    private static string GetStatusBadgeClass(string status) => status.ToLower() switch
    {
        "success" => "bg-success",
        "failed" => "bg-danger",
        "pending" => "bg-warning",
        _ => "bg-secondary"
    };
}