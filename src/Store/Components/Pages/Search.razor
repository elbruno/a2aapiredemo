@page "/search"
@using Store.Services
@using SearchEntities
@using Microsoft.AspNetCore.Components

@inject ISearchService SearchService
@inject IConfiguration Configuration
@inject NavigationManager NavigationManager
@attribute [StreamRendering(true)]
@rendermode InteractiveServer

<PageTitle>Search Products</PageTitle>

<h1>Search Products</h1>

<p>Search our amazing outdoor products and content using natural language.</p>

<div class="form-group">
    <label for="search" class="form-label">Type your question:</label>
    <div class="input-group mb-3">
        <input type="text" id="search" class="form-control" @bind="searchTerm" placeholder="Enter search term..." />
        <button id="btnSearch" class="btn btn-primary" @onclick="DoSearch" type="submit">Search</button>
    </div>
    <hr />
    <p class="quote">@aiResponse</p>
</div>

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (searchResults != null && searchResults.Any())
{
    <div class="search-results">
        <p><strong>Found @searchResponse?.Count results for "@searchResponse?.Query"</strong></p>
        
        @foreach (var result in searchResults)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="@result.Url" class="text-decoration-none">@result.Title</a>
                    </h5>
                    <p class="card-text">@result.Snippet</p>
                    <small class="text-muted">
                        Score: @result.Score.ToString("F2")
                        @if (result.Metadata.Any())
                        {
                            <span> | </span>
                            @foreach (var meta in result.Metadata.Take(2))
                            {
                                <span class="badge bg-secondary me-1">@meta.Key: @meta.Value</span>
                            }
                        }
                    </small>
                </div>
            </div>
        }
    </div>
}
else if (hasSearched)
{
    <div class="alert alert-info">
        <h4>No results found</h4>
        <p>Try different keywords or check your spelling.</p>
    </div>
}

@code {
    private string searchTerm = "";
    private List<SearchResult>? searchResults;
    private SearchResponse? searchResponse;
    private string aiResponse = "";
    private bool isLoading = false;
    private bool hasSearched = false;

    protected override async Task OnInitializedAsync()
    {
        // Check for query parameter from search box
        var uri = new Uri(NavigationManager.Uri);
        var queryParams = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        
        if (queryParams.TryGetValue("q", out var queryValue) && !string.IsNullOrWhiteSpace(queryValue))
        {
            searchTerm = queryValue.ToString();
            await DoSearchInternal();
        }
    }

    private async Task DoSearch(MouseEventArgs e)
    {
        await DoSearchInternal();
    }

    private async Task DoSearchInternal()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            return;
        }

        isLoading = true;
        hasSearched = false;
        searchResults = null;
        aiResponse = "";
        StateHasChanged();

        try
        {
            await Task.Delay(100); // Small delay to show loading state
            searchResponse = await SearchService.SearchAsync(searchTerm);
            
            if (searchResponse != null)
            {
                searchResults = searchResponse.Results;
                aiResponse = searchResponse.Response ?? $"Found {searchResponse.Count} results";
            }
        }
        catch (Exception ex)
        {
            aiResponse = "Search failed. Please try again.";
            searchResults = new List<SearchResult>();
        }
        finally
        {
            isLoading = false;
            hasSearched = true;
            StateHasChanged();
        }
    }
}
