@using Store.Services
@using SearchEntities
@inject IChatClientService ChatService
@inject ILogger<ChatWidget> Logger
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IAsyncDisposable

<div class="chat-widget @(IsExpanded ? "expanded" : "collapsed")">
    <div class="chat-header" @onclick="ToggleExpanded">
        <div class="chat-title">
            <span class="chat-icon">üí¨</span>
            <span class="chat-label">Chat Assistant</span>
            @if (!IsExpanded && _unreadCount > 0)
            {
                <span class="unread-badge">@_unreadCount</span>
            }
        </div>
        <div class="chat-status">
            @if (ChatService.IsConnected)
            {
                <span class="status-indicator connected" title="Connected">‚óè</span>
            }
            else
            {
                <span class="status-indicator disconnected" title="Disconnected">‚óè</span>
            }
        </div>
    </div>

    @if (IsExpanded)
    {
        <div class="chat-body">
            <div class="chat-messages" @ref="messagesContainer">
                @if (_messages.Count == 0)
                {
                    <div class="welcome-message">
                        <div class="bot-message">
                            <div class="message-avatar">ü§ñ</div>
                            <div class="message-content">
                                <div class="message-text">
                                    Welcome to eShopLite! I'm here to help you find the perfect outdoor gear. 
                                    Ask me about products, pricing, or our policies!
                                </div>
                                <div class="message-time">@DateTime.Now.ToString("HH:mm")</div>
                                <div class="suggested-actions">
                                    <button class="suggestion-btn" @onclick="@(() => SendSuggestedMessage("What running shoes do you recommend?"))">
                                        Running Shoes
                                    </button>
                                    <button class="suggestion-btn" @onclick="@(() => SendSuggestedMessage("Show me hiking gear"))">
                                        Hiking Gear
                                    </button>
                                    <button class="suggestion-btn" @onclick="@(() => SendSuggestedMessage("What's your return policy?"))">
                                        Return Policy
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var message in _messages)
                    {
                        <div class="@(message.IsUser ? "user-message" : "bot-message")">
                            <div class="message-avatar">@(message.IsUser ? "üë§" : "ü§ñ")</div>
                            <div class="message-content">
                                <div class="message-text">@message.Text</div>
                                <div class="message-time">@message.Timestamp.ToString("HH:mm")</div>
                                @if (!message.IsUser && message.SuggestedActions.Any())
                                {
                                    <div class="suggested-actions">
                                        @foreach (var action in message.SuggestedActions)
                                        {
                                            <a href="@action.Url" class="suggestion-link">@action.Text</a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }

                @if (_isTyping)
                {
                    <div class="bot-message typing">
                        <div class="message-avatar">ü§ñ</div>
                        <div class="message-content">
                            <div class="typing-indicator">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="chat-input">
                <div class="input-container">
                    <input @bind="_currentMessage" 
                           @onkeypress="HandleKeyPress" 
                           @oninput="HandleInputChange"
                           placeholder="Type your message..." 
                           disabled="@_isSending" 
                           maxlength="5000" />
                    <button @onclick="SendMessage" 
                            disabled="@(string.IsNullOrWhiteSpace(_currentMessage) || _isSending)"
                            class="send-btn">
                        @if (_isSending)
                        {
                            <span class="loading-spinner"></span>
                        }
                        else
                        {
                            <span>üì§</span>
                        }
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <div class="error-message">
                        @_errorMessage
                        <button @onclick="() => _errorMessage = string.Empty" class="error-close">√ó</button>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public bool IsExpanded { get; set; } = false;
    [Parameter] public EventCallback<bool> IsExpandedChanged { get; set; }

    private List<ChatMessageDisplay> _messages = new();
    private string _currentMessage = string.Empty;
    private bool _isSending = false;
    private bool _isTyping = false;
    private string _errorMessage = string.Empty;
    private ElementReference messagesContainer;
    private int _unreadCount = 0;

    protected override async Task OnInitializedAsync()
    {
        ChatService.MessageReceived += OnMessageReceived;
        ChatService.ConnectionStateChanged += OnConnectionStateChanged;
        
        try
        {
            await ChatService.StartConnectionAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to start chat connection");
            _errorMessage = "Failed to connect to chat service. Some features may not work.";
        }
    }

    private async void OnMessageReceived(ChatResponse response)
    {
        await InvokeAsync(async () =>
        {
            _isTyping = false;
            
            var message = new ChatMessageDisplay
            {
                Text = response.Response,
                IsUser = false,
                Timestamp = DateTime.Now,
                SuggestedActions = response.SuggestedActions ?? new List<SuggestedAction>()
            };

            _messages.Add(message);

            if (!IsExpanded)
            {
                _unreadCount++;
            }
            else
            {
                _unreadCount = 0;
            }

            StateHasChanged();
            await ScrollToBottom();
        });
    }

    private void OnConnectionStateChanged(bool isConnected)
    {
        InvokeAsync(() =>
        {
            if (!isConnected && !string.IsNullOrEmpty(_errorMessage))
            {
                _errorMessage = "Lost connection to chat service. Reconnecting...";
            }
            else if (isConnected && _errorMessage.Contains("connection"))
            {
                _errorMessage = string.Empty;
            }
            
            StateHasChanged();
        });
    }

    private async Task ToggleExpanded()
    {
        IsExpanded = !IsExpanded;
        await IsExpandedChanged.InvokeAsync(IsExpanded);
        
        if (IsExpanded)
        {
            _unreadCount = 0;
            await Task.Delay(100); // Allow UI to render
            await ScrollToBottom();
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_currentMessage) || _isSending)
            return;

        var messageText = _currentMessage.Trim();
        _currentMessage = string.Empty;
        _isSending = true;
        _isTyping = true;
        _errorMessage = string.Empty;

        // Add user message to display
        var userMessage = new ChatMessageDisplay
        {
            Text = messageText,
            IsUser = true,
            Timestamp = DateTime.Now,
            SuggestedActions = new List<SuggestedAction>()
        };

        _messages.Add(userMessage);
        StateHasChanged();
        await ScrollToBottom();

        try
        {
            // Get current page context for better responses
            var context = new ChatContext
            {
                CurrentPage = Navigation.Uri,
                UserPreferences = new Dictionary<string, object>()
            };

            var response = await ChatService.SendMessageAsync(messageText, context: context);
            
            // Add bot response
            var botMessage = new ChatMessageDisplay
            {
                Text = response.Response,
                IsUser = false,
                Timestamp = DateTime.Now,
                SuggestedActions = response.SuggestedActions ?? new List<SuggestedAction>()
            };

            _messages.Add(botMessage);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to send chat message");
            _errorMessage = "Failed to send message. Please try again.";
            
            // Add error message to chat
            var errorMessage = new ChatMessageDisplay
            {
                Text = "Sorry, I'm having trouble responding right now. Please try again in a moment.",
                IsUser = false,
                Timestamp = DateTime.Now,
                SuggestedActions = new List<SuggestedAction>()
            };

            _messages.Add(errorMessage);
        }
        finally
        {
            _isSending = false;
            _isTyping = false;
            StateHasChanged();
            await ScrollToBottom();
        }
    }

    private async Task SendSuggestedMessage(string message)
    {
        _currentMessage = message;
        await SendMessage();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessage();
        }
    }

    private void HandleInputChange(ChangeEventArgs e)
    {
        _currentMessage = e.Value?.ToString() ?? string.Empty;
        // Could implement typing indicators here
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await Task.Delay(50); // Allow DOM to update
            await messagesContainer.FocusAsync();
            // Scroll to bottom using JavaScript
            await JS.InvokeVoidAsync("scrollToBottom", messagesContainer);
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Failed to scroll to bottom");
        }
    }

    public async ValueTask DisposeAsync()
    {
        ChatService.MessageReceived -= OnMessageReceived;
        ChatService.ConnectionStateChanged -= OnConnectionStateChanged;
        
        if (ChatService is IAsyncDisposable disposable)
        {
            await disposable.DisposeAsync();
        }
    }

    private class ChatMessageDisplay
    {
        public string Text { get; set; } = string.Empty;
        public bool IsUser { get; set; }
        public DateTime Timestamp { get; set; }
        public List<SuggestedAction> SuggestedActions { get; set; } = new();
    }
}

<style>
